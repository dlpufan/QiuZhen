.text_view{
  width:90%;
  height:200rpx;
  background-color: rgba(175, 175, 175, 0.2);
  border-radius: 30rpx;
  margin:0 auto;
  margin-top: 30rpx;
  border: 1rpx solid black;
}
.text_view_font{
  margin-top: 10rpx;
  width:100%;
  height:22%;
  font-size: 28rpx;
