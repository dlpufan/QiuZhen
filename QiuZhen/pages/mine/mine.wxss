/* pages/mine/mine.wxss */
.loginButton{
  width:100%;
  height:260rpx;
  border-bottom: 1rpx solid black;
}
.loginButton button{
  position: relative;
  top:30%;
}
.userinfoHeadImg{
  width:120rpx;
  height:120rpx;
  margin:0 auto;
}
.userinfoHeadImg image{
  width:100%;
  height:100%;
  border-radius: 50%;
  margin-top: 20rpx;
}
.userinfoName{
  width:150rpx;
  height:100rpx;
  margin:0 auto;
  margin-top: 30rpx;
  font-size: 50rpx;
  font-weight: bold;
  font-family: "微软雅黑";
  text-align: center;
}
.userInfo{
  width:100%;
  height:150rpx;
}
.userInfoNavigator{
  width:50%;
  height:100%;
  float:left;
}

.userInfoView view{
  width: 100%;
  height:100%;
  border:1px solid black;
  background: #e3faff;
}
.userInfoView{
  width:100%;
  height:100%;
}
.userInfoView text{
  position: relative;
  top:30%;
  left:10%;
  font-size: 33rpx;
}